{
  "include": ["src"],
  "compilerOptions": {
    "target": "es2022",
    "types": ["node"],
    "outDir": "esm",
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "esModuleInterop": true
  }
}
