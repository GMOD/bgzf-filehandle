{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "target": "es2022",
    "types": [
      "node"
    ],
    "outDir": "esm",
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "rewriteRelativeImportExtensions": true,
    "esModuleInterop": true
  }
}
