{
  "name": "@gmod/bgzf-filehandle",
  "version": "3.0.2",
  "description": "read from a compressed bgzip file (with .gzi) as if it were uncompressed",
  "license": "MIT",
  "repository": "gmod/bgzf-filehandle",
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "exports": {
    "import": {
      "import": "./esm/index.js"
    },
    "require": {
      "require": "./dist/index.js"
    }
  },
  "author": {
    "name": "Robert Buels",
    "email": "rbuels@gmail.com",
    "url": "https://github.com/rbuels"
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "dist",
    "esm",
    "src"
  ],
  "scripts": {
    "test": "vitest",
    "lint": "eslint --report-unused-disable-directives --max-warnings 0",
    "clean": "rimraf dist esm",
    "prebuild": "yarn clean",
    "build:esm": "tsc --outDir esm",
    "build:es5": "tsc --module commonjs --outDir dist",
    "build": "yarn build:esm && yarn build:es5",
    "prepublishOnly": "yarn test --run && yarn build",
    "postversion": "git push --follow-tags"
  },
  "keywords": [
    "bionode",
    "biojs"
  ],
  "dependencies": {
    "generic-filehandle2": "^2.0.1",
    "pako": "^1.0.11"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "@types/pako": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "@vitest/coverage-v8": "^3.1.2",
    "eslint": "^9.9.0",
    "eslint-plugin-unicorn": "^59.0.0",
    "prettier": "^3.4.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.1.0",
    "vitest": "^3.1.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
